<Window x:Class="ResumeBuilder.AddWindows.AddReferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeBuilder.AddWindows"
        mc:Ignorable="d"
        Title="AddReferenceWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Name" Margin="5"/>
        <TextBox x:Name="NameTextBox" Margin="5"/>

        <TextBlock Text="Description" Margin="5"/>
        <TextBox x:Name="DescriptionTextBox" Margin="5"/>

        <TextBlock Text="Contact Info" Margin="5"/>
        <TextBox x:Name="ContactInfoTextBox" Margin="5"/>

        <Button Content="Submit" Margin="5" Click="SubmitButton_Click"/>
    </StackPanel>
</Window>
