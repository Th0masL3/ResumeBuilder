<Window x:Class="ResumeBuilder.AddWindows.AddEducationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeBuilder.AddWindows"
        mc:Ignorable="d"
        Title="AddEducationWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Certification" Margin="5"/>
        <TextBox x:Name="CertificationTextBox" Margin="5"/>

        <TextBlock Text="School Name" Margin="5"/>
        <TextBox x:Name="SchoolNameTextBox" Margin="5"/>

        <TextBlock Text="Year Graduated" Margin="5"/>
        <TextBox x:Name="YearGraduatedTextBox" Margin="5"/>

        <Button Content="Submit" Margin="5" Click="SubmitButton_Click"/>
    </StackPanel>
</Window>
